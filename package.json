{
  "name": "pnet-tool",
  "version": "0.1.3",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "dev:desktop": "pnpm run build:electron && pnpm exec concurrently -k \"pnpm run dev\" \"pnpm run watch:electron\" \"pnpm run launch:electron\"",
    "build": "pnpm run build:web && pnpm run build:electron",
    "build:web": "next build --turbopack",
    "start": "next start",
    "launch:electron": "pnpm exec wait-on tcp:3000 file:dist-electron/main.js && pnpm exec electron dist-electron/main.js",
    "watch:electron": "pnpm exec tsc -p electron/tsconfig.json --watch",
    "build:electron": "pnpm exec tsc -p electron/tsconfig.json",
    "lint": "eslint",
    "postinstall": "pnpm exec electron-rebuild -f -w node-pty"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "next-themes": "^0.3.0",
    "node-pty": "^1.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
  "@electron/rebuild": "^3.6.0",
  "@next/eslint-plugin-next": "15.5.4",
    "concurrently": "^9.0.1",
    "electron": "^38.2.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "shadcn": "^3.3.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^8.0.1"
  }
}
