{
  "name": "pnet-tool",
  "version": "0.2.1",
  "private": true,
  "description": "Electron 桌面端的 PNETLab Telnet 客户端，集成健康探测与协议处理自动化",
  "author": "YangYuS8",
  "main": "src-tauri",
  "packageManager": "pnpm@10.17.0",
  "scripts": {
    "dev": "concurrently -k \"pnpm:dev:web\" \"pnpm:dev:tauri\"",
    "dev:web": "next dev --turbopack",
    "dev:tauri": "tauri dev",
    "build": "turbo run build:web:tp --filter=. --force && cross-env RUSTFLAGS= tauri build",
    "build:web": "cross-env NODE_OPTIONS=--max-old-space-size=8192 NEXT_TELEMETRY_DISABLED=1 next build",
    "build:web:tp": "cross-env NODE_OPTIONS=--max-old-space-size=8192 NEXT_TELEMETRY_DISABLED=1 next build --turbopack",
    "build:tauri": "cross-env RUSTFLAGS= tauri build",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build:appimage": "turbo run build:web:tp --filter=. --force && cross-env RUSTFLAGS= tauri build --bundles appimage",
    "build:deb": "turbo run build:web:tp --filter=. --force && cross-env RUSTFLAGS= tauri build --bundles deb",
    "build:msi": "turbo run build:web:tp --filter=. --force && cross-env RUSTFLAGS= tauri build --bundles msi",
    "build:binary": "turbo run build:web:tp --filter=. --force && cross-env RUSTFLAGS= tauri build --bundles none",
    "install:linux": "bash ./scripts/install-linux.sh",
    "check:appimage-deps": "bash ./scripts/check-appimage-deps.sh",
    "lint": "eslint"
  },
  "dependencies": {
    "@tauri-apps/plugin-process": "^2.0.0",
    "@tauri-apps/plugin-shell": "^2.0.0",
    "@tauri-apps/api": "^2.0.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "next-themes": "^0.3.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "turbo": "^2.5.8",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@next/eslint-plugin-next": "15.5.4",
    "concurrently": "^9.0.1",
    "cross-env": "^7.0.3",
    "@tauri-apps/cli": "^2.0.0",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "shadcn": "^3.3.1",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "wait-on": "^8.0.1"
  },
  "engines": {
    "node": ">=20 <21"
  }
}
